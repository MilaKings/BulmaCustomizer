      <div class="container tab-content" id="pictures">
        <div class="field is-flex is-flex-direction-row is-justify-content-space-around">
          <div class="control m-2 is-flex is-flex-direction-row level-item">
            <strong class="is-size-6">@import url</strong>
            <input class="input m-2 is-size-8 is-link bulma-variable" type="text" id="@import url"
              value="https://fonts.googleapis.com/css?family=Tangerine">
          </div>
          <div class="control m-2 is-flex is-flex-direction-row level-item">
            <strong class="is-size-6">$primary</strong>
            <div class="cp_wrapper">
              <input class="input bulma-variable" type="color" id="$primary" name="color" value="#00d1b2">
            </div>
          </div>
          <div class="control m-2 is-flex is-flex-direction-row level-item">
            <strong class="is-size-6">$link</strong>
            <div class="cp_wrapper">
              <input class="input bulma-variable" type="color" id="$link" name="color" value="#485fc7">
            </div>
          </div>
          <div class="control m-2 is-flex is-flex-direction-row level-item">
            <strong class="is-size-6">$body-background-color</strong>
            <div class="cp_wrapper">
              <input class="input bulma-variable" type="color" id="$body-background-color" name="color" value="#ffffff">
            </div>
          </div>
        </div>
      </div>

